<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/main_bg_color"
    tools:context="com.src.adrien.gotcha.SignUpActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/my_dues_hint_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/my_dues_description"
            android:textSize="@dimen/actionbar_title_small_size"
            android:textColor="@color/terms_text_color"
            android:layout_toLeftOf="@+id/my_dues_close_btn"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="5dp"/>

        <Button
            android:id="@+id/my_dues_close_btn"
            android:layout_width="@dimen/my_dues_close_btn_width"
            android:layout_height="@dimen/my_dues_close_btn_width"
            android:background="@drawable/close_icon"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <com.baoyz.swipemenulistview.SwipeMenuListView
        android:id="@+id/my_dues_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"/>

</LinearLayout>

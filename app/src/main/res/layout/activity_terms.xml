<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/main_bg_color"
    tools:context="com.src.adrien.gotcha.SignUpActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/normal_button_height"
        android:layout_marginBottom="@dimen/normal_button_height">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/terms_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/term_and_privacy"
                android:textColor="@color/terms_text_color"
                android:textSize="@dimen/normal_button_small_text"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>

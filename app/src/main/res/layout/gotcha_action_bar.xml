<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" 
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/actionbar_title_txt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="@dimen/actionbar_title_size"/>

    <com.src.adrien.gotcha.customview.SquareLayout
        android:id="@+id/actionbar_left_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp">
        <Button
            android:id="@+id/actionbar_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/back_btn"/>
    </com.src.adrien.gotcha.customview.SquareLayout>

    <Button
        android:id="@+id/actionbar_right_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical|right"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:text="Next"
        android:textColor="#fff"
        android:textSize="@dimen/actionbar_title_small_size"/>

    <com.src.adrien.gotcha.customview.SquareLayout
        android:id="@+id/actionbar_right_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true">
        <Button
            android:id="@+id/actionbar_right_img_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/create_icon"/>
    </com.src.adrien.gotcha.customview.SquareLayout>
    
</RelativeLayout>

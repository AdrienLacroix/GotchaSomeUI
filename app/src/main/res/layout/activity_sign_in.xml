<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/main_bg_color"
    tools:context="com.src.adrien.gotcha.SignUpActivity">

    <EditText
        android:id="@+id/sign_in_username_edt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_edittext_height"
        android:background="#fff"
        android:layout_marginTop="@dimen/normal_edittext_height"
        android:layout_marginBottom="0.7dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:hint="Username"/>

    <EditText
        android:id="@+id/sign_in_password_edt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_edittext_height"
        android:background="#fff"
        android:inputType="textPassword"
        android:layout_marginBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:hint="Password"/>

    <TextView
        android:id="@+id/sign_in_forgot_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:text="Forgot Password?"
        android:textSize="@dimen/normal_button_small_text"
        android:textColor="@color/take_picture_cancel_color"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/sign_in_or_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="or"
        android:textSize="@dimen/normal_button_text"
        android:textColor="#58585a"
        android:layout_marginBottom="10dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_button_height"
        android:background="#58585a"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="@dimen/normal_button_text"
        android:text="Sign in with Facebook"
        android:textColor="#fff"/>

    <TextView
        android:id="@+id/sign_in_terms_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_margin="20dp"
        android:gravity="center_horizontal"
        android:textSize="@dimen/normal_button_small_text"
        android:textColor="#58585a" />

</LinearLayout>
